\usepackage{amsmath,amssymb}

\newtheorem{ex}{Aufgabe}
\newenvironment{exercise}[1]%
   {\def\tmp{}%
    \def\points{#1}%
    \ifx\points\tmp
      \begin{ex}
    \else
      \def\tmp{1}%
      \begin{ex}[#1 Punkt\ifx\points\tmp\else e\fi]
    \fi
    \normalfont
   }%
   {\end{ex}%
   }

\usepackage{enumerate}
\newenvironment{subexercises}%
   {\begin{enumerate}[(a)]}%
   {\end{enumerate}}
\newenvironment{subsubexercises}%
   {\begin{enumerate}[(1)]}%
   {\end{enumerate}}

\newenvironment{solution}%
